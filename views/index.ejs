<% include ./partials/header.ejs %>
<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>

    <div class="ui top attached segment">
        <div class="ui divided items">
                <% blogs.forEach((blog) => { %>     
                    <div class="item">
                
                        <div class="image">
                            <img src="<%= blog.image %>" alt="image of <%= blog.title %>">
                        </div>

                        <div class="content">
                            <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>

                            <div class="meta">
                                <span><%= blog.created.toDateString() %></span>
                            </div>

                            <div class="description">
                                <p><%- blog.body.substring(0, 101) %>...</p>
                            </div>

                            <div class="extra">
                                <a href="/blogs/<%= blog._id %>" class="ui floated basic violet button">Read More
                                    <i class="right chevron icon"></i></a>

                            </div>
                        </div>
                    </div>
                <% }); %>
            
        </div>
    </div>
</div>




<% include ./partials/footer.ejs %>